{% extends 'base.html.twig' %}

{% block title %}Produktai{% endblock %}

{% block body %}
    <div class="container">
        <div id="product-map"></div>
    </div>
    <div class="container product-list">
        <div class="row">
            {% for product in products %}
                <div class="col-md-3">
                    <div class="product-box">
                        <div>
                            {% if product.picture is not null %}
                                <img class="product-list-img" src="{{ (vich_uploader_asset(product, 'pictureFile')) }}" alt="Produkto nuotrauka">
                            {% else %}
                                <img class="product-list-img" src="{{ (asset('build/products/product_image.png'))}}" alt="Nėra produkto nuotraukos">
                            {% endif %}
                            <div class="product-user">
                                {% if product.user.avatar is not null %}
                                    <img class="product-avatar" src=" {{('/images/avatars/' ~product.user.avatar )  }}"
                                         width="78" height="78"
                                         alt="Avataras">
                                    {#<td><img src="{{ (vich_uploader_asset(avatar, 'avatarFile'))}}"#}
                                    {#alt="Avatar"></td>#}
                                {% else %}
                                    <img class="product-avatar" src="https://s3.eu-north-1.amazonaws.com/food-sharing/media/avataras.png" alt="Avataras">
                                {% endif %}
                                <span class="product-avatar-user">{{ product.user.username }}</span>
                            </div>
                        </div>
                        <div class="product-list-title">
                            <h4>{{ product.title }}</h4>
                        </div>
                        <div class="product-list-description">
                            {{ product.description }}
                        </div>
                        <div class="profile-btn-block">
                            <div class="profile-btn-margin">
                                <a target="_blank" class="call-to-btn-green" href="{{ path('contact', {'id': product.id}) }}">Susisiekti <i class="fas fa-envelope"></i>

                                   </a>
                            </div>
                        </div>
                        <div class="product-list-deadline">
                            Baigia galioti {{ product.timeLeft }}
                        </div>
                    </div>
                </div>
            {% else %}
                Nėra produktų
            {% endfor %}
        </div>
    </div>

 {% endblock %}
