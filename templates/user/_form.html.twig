{{ form_start(form,{action:path('user_edit', {id: app.user.id})}) }}

<div class="row justify-content-center form-block">
    <div class="col-lg-6 col-md-8">
        <div class="row justify-content-center">
            <div class="col-md-6 form-padding-right">
                <div class="form-group">
                    <span class="form-label">{{ form_row(form.firstName, {'attr': {'class': 'form-control form-space'}}) }}</span>
                    <span class="form-label">{{ form_row(form.lastName, {'attr': {'class': 'form-control form-space'}}) }}</span>
