                    <span class="">{{ form_row(form.email, {'attr': {'class': 'form-control form-space'}}) }}</span>
                    <span class="">{{ form_row(form.avatarFile, {'attr': {'class': 'form-control form-space'}}) }}</span>
                </div>
            </div>
        </div>
