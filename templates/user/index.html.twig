{% extends 'base.html.twig' %}

{% block title %}Vartotojai{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vartotojo vardas</th>
                <th>Vardas</th>
                <th>PavardÄ—</th>
                <th>Email</th>
                <th>Avatar</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td><img src="{{ (vich_uploader_asset(user, 'avatarFile'))|imagine_filter("square")}}" ></td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Parodyti</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Redaguoti</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
